{
  "name": "test-app",
  "version": "0.1.0",
  "private": true,
  "description": "Test Platform - Production Ready",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "test": "jest -c config/jest/jest.config.js",
    "test:watch": "jest -c config/jest/jest.config.js --watch",
    "test:coverage": "jest -c config/jest/jest.config.js --coverage",
    "test:ci": "jest -c config/jest/jest.config.js --ci --coverage --watchAll=false",
    "test:e2e": "jest -c config/jest/jest.config.js src/__tests__/integration --testTimeout=30000",
    "prepare": "husky",
    "setup:env": "node scripts/setup-env.js",
    "setup:admin": "node scripts/setup-admin.js",
    "setup:email": "node scripts/setup-email.js",
    "db:push": "prisma db push",
    "db:generate": "prisma generate",
    "postinstall": "prisma generate",
    "test:local": "./scripts/test-all-local.sh",
    "test:quick": "./scripts/test-quick.sh",
    "cleanup:deps": "rm -rf node_modules package-lock.json && npm install",
    "check:todos": "grep -r 'TODO\\|FIXME\\|HACK\\|XXX' --include='*.js' --include='*.jsx' --include='*.ts' --include='*.tsx' src/ || echo 'No TODOs found'",
    "check:quality": "npm run lint && npm run check:todos",
    "recalculate:risk-scores": "npx ts-node scripts/recalculate-risk-scores.ts"
  },
  "dependencies": {
    "@formkit/auto-animate": "^0.8.2",
    "@prisma/client": "^6.10.1",
    "@tailwindcss/forms": "^0.5.9",
    "@types/bcryptjs": "^2.4.6",
    "@types/jspdf": "^1.3.3",
    "@types/papaparse": "^5.3.16",
    "@upstash/ratelimit": "^2.0.5",
    "@upstash/redis": "^1.35.1",
    "bcryptjs": "^3.0.2",
    "core-js": "^3.43.0",
    "date-fns": "^4.1.0",
    "devtools-detect": "^4.0.2",
    "eslint": "^8.57.1",
    "framer-motion": "^12.19.1",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.1",
    "lottie-react": "^2.4.1",
    "lucide-react": "^0.512.0",
    "mic-check": "^1.1.0",
    "nanoid": "^5.1.5",
    "next": "^15.3.3",
    "next-auth": "^4.24.11",
    "nodemailer": "^7.0.5",
    "papaparse": "^5.5.3",
    "pg-boss": "^9.0.3",
    "prismjs": "^1.30.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-intersection-observer": "^9.16.0",
    "react-markdown": "^10.1.0",
    "react-syntax-highlighter": "^15.6.1",
    "recharts": "^2.15.3",
    "remark-gfm": "^4.0.1",
    "sass": "^1.89.1",
    "swr": "^2.3.3",
    "tailwindcss": "^3.4.17",
    "xlsx": "^0.18.5",
    "xlsx-js-style": "^1.2.0",
    "zod": "^3.25.56",
    "zustand": "^5.0.5"
  },
  "devDependencies": {
    "@playwright/test": "^1.52.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^20",
    "@types/nodemailer": "^6.4.17",
    "@types/prismjs": "^1.26.5",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/react-syntax-highlighter": "^15.5.13",
    "autoprefixer": "^10.4.21",
    "dotenv": "^16.5.0",
    "eslint-config-next": "^15.3.4",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.2",
    "lint-staged": "^15.2.2",
    "postcss": "^8.5.6",
    "prettier": "^3.6.0",
    "prettier-plugin-tailwindcss": "^0.6.13",
    "prisma": "^6.10.1",
    "puppeteer": "^24.12.1",
    "typescript": "^5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write"
    ]
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "overrides": {
    "@testing-library/react": {
      "react": "$react",
      "react-dom": "$react-dom"
    }
  }
}
