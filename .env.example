# Database Configuration
# PostgreSQL connection string
DATABASE_URL="postgresql://username:password@localhost:5432/database_name"

# Authentication
# Generate a secure random string for production: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-key-here"
NEXTAUTH_URL="http://localhost:3000"

# Google OAuth Configuration
# Get these from https://console.cloud.google.com/
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Email Configuration (Gmail SMTP)
# Use app-specific password for Gmail: https://support.google.com/accounts/answer/185833
GMAIL_USER="your-email@gmail.com"
GMAIL_APP_PASSWORD="your-app-specific-password"

# Company Information
COMPANY_NAME="Your Company Name"

# Optional: AI Service Configuration
# Uncomment and configure if using AI proctoring features
# CUSTOM_AI_SERVICE_URL="http://localhost:8000"
# AI_SERVICE_API_KEY="your-ai-service-api-key"

# Optional: Worker Queue API (recommended for proctoring worker)
# WORKER_API_URL="http://localhost:3000"
# WORKER_API_TOKEN="your-internal-worker-token"

# Optional: Maintenance mode
# Set to "true" to temporarily block starting new tests
MAINTENANCE_MODE="false"

# Optional: Monitoring Configuration
# Uncomment and configure if using OpenTelemetry
# OTEL_EXPORTER_OTLP_ENDPOINT="http://localhost:4318"
# OTEL_SERVICE_NAME="critestapp"
# OTEL_ENVIRONMENT="development"

# Environment
NODE_ENV="development"
